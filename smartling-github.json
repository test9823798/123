{
    "locales" : [
        {
            "smartling"   : "de-DE",
            "application" : "de_DE"
        },
        {
            "smartling"   : "zh-CN",
            "application" : "zh_HANS"
        }
    ],
    "resourcesSets": [
        {
            "pathRegex"                 : "resources/(?<path>.*)\\.properties",
            "translationPathExpression" : "translation/${path}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Task TRN-TEST translate ${originalFile.name} to ${locale}\n${translatedFile.fullName}",
            "type"                      : "javaProperties",
            "authorizeContent"          : true
        }
    ]
}